
@{
    ViewBag.Title = "PayPalView";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>ValidateCommand</h2>
    <div>
        <table>
            <tr>
                <td>
                   Event Name:
                </td>
                <td>
                    <input type="text" name="EventName" value="Visual Studio 2019" readonly />
                </td>
            </tr>
